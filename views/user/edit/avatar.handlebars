<script>
    function validate(){
        var size=1048576;
        var file_size=document.getElementById('archivo').files[0].size;
        if(file_size>=size){
            alert('El archivo excede el limite de 1 MB');
            return false;
        }
    }
</script>

<h2 class="page-header">Editar Avatar</h2>
{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
{{/if}}
<img height="150" width="150" align="center" src="/public/avatar/{{user.avatar}}" class="main-img">

<form method="post" action="/user/edit/avatar/{{user.id}}?_method=PUT" enctype="multipart/form-data">
    <div class="form-group">
        <label>Avatar</label>
        <input type="file" class="form-control" name="archivo" placeholder="Archivo" id="archivo">
    </div>
    <button type="submit" class="btn btn-default" onClick="return validate()">Cambiar</button>
</form>