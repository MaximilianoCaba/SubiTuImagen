<script>
    function validate() {
        var size = 10485760;
        var file_size = document.getElementById('archivo').files[0].size;
        if (file_size >= size) {
            alert('El archivo excede los 10 MB');
            return false;
        }
    }
</script>

<h2 class="page-header">Subi Tu imagen</h2>
<form method="post" action="/app/imagenes" enctype="multipart/form-data">
    <div class="form-group">
        <label>Titulo</label>
        <input type="text" class="form-control" name="title" placeholder="Este campo no debe estar vacio">
    </div>
    <div class="form-group">
        <label>Categoria</label> Seleccione la categoria correcta.
        <select class="form-control" name="category">
            <option value="Deporte">Deportes</option>
            <option value="Paisaje">Paises</option>
            <option value="Pelicula">Peliculas</option>
            <option value="Dibujo">Dibujos</option>
            <option value="Serie">Series</option>
        </select>
    </div>
    <div class="form-group">
        <label>Tags</label>
        <input type="text" class="form-control" name="tags"
               placeholder="Deje un espacio en blanco por cada tag, puede agregar hasta 7">
    </div>
    <div class="form-group">
        <label>Imagen</label> Este campo no debe estar vacio.
        <input type="file" class="form-control" name="archivo" placeholder="Archivo" accept="image/*" id="archivo">
    </div>
    <div class="form-group">
        <label>Comentario</label>
        <textarea class="form-control" id="exampleTextarea" rows="2" name="comentImagen">
        </textarea>

    </div>
    <button type="submit" class="btn btn-success">Subir imagen</button>

</form>

