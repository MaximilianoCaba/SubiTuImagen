<h1>Eliminar Reporte</h1>

<div>
    <form action="/admin/module/report/delete/coment/{{id}}?_method=DELETE" , class="link" , method="POST">

        <div class="form-group">
            <label>Eliminar Comentario</label>
            <select class="form-control" name="eliminar">
                <option value="si">SI</option>
                <option value="no">NO</option>
            </select>
        </div>

        <div class="form-group">
            <label>Aclaracion</label>
            <input type="text" class="form-control" name="aclaration" placeholder="Aclaracion adicional">
        </div>

        <label>Fecha de suspension</label>
        <div class="input-group date" data-provide="datepicker" data-date-format="dd/mm/yyyy" data-date-language="es">
            <input type="text" class="form-control" name="date">
            <div class="input-group-addon">
                <span class="glyphicon glyphicon-th"></span>
            </div>
        </div>

        <input type="submit" class="btn btn-danger" value="Eliminar"/>
    </form>
</div>