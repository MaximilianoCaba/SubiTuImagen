<div class="container">
    <center><h2>Suspensiones</h2></center>
    <br>
    <br>
    <h4>Lista de Suspensiones</h4>
    <table class="table">
        <thead>
        <tr>
            <th>Email</th>
            <th>Username</th>
            <th>Desde</th>
            <th>Hasta</th>
            <th>Ver</th>
            <th>Editar</th>
            <th>Eliminar</th>
        </tr>
        </thead>
        <tbody>
        {{#each suspensions}}
        <tr>
            <td>{{user.email}}</td>
            <td>{{user.username}}</td>
            <td>{{date}}</td>
            <td>{{dateSuspension}}</td>
            <td>
                <form action="/admin/module/suspension/{{id}}">
                    <input type="submit" class="btn btn-success" value="X"/>
                </form>
            </td>
            <td>
                <form action="/admin/module/suspension/edit/{{id}}">
                    <input type="submit" class="btn btn-info" value="X"/>
                </form>
            </td>
            <td>
                <form action="/admin/module/suspension/{{id}}?_method=DELETE" method="POST">
                    <input type="submit" class="btn btn-danger" value="X"/>
                </form>
            </td>
        </tr>
        {{/each}}

        </tbody>
    </table>
</div>

<center>
    <form action="/admin/module">
        <input type="submit" class="btn btn-info" value="Volver"/>
    </form>

</center>